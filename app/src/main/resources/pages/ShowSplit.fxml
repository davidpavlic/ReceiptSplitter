<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.ShowSplitController">
    <top>
        <!-- Optional top element can be added here -->
    </top>
    <center>
        <VBox>
            <HBox>
                <Button fx:id="buttonPreviousPerson" text="⟨">
               <HBox.margin>
                  <Insets left="10.0" top="20.0" />
               </HBox.margin></Button>
                <Pane HBox.hgrow="ALWAYS" />
                <Text fx:id="contactName" text="Max Mustermann" textAlignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </HBox.margin></Text>
                <Pane HBox.hgrow="ALWAYS">
               <opaqueInsets>
                  <Insets bottom="10.0" />
               </opaqueInsets></Pane>
                <Button fx:id="buttonNextPerson" text="⟩">
               <HBox.margin>
                  <Insets right="10.0" top="20.0" />
               </HBox.margin></Button>
            </HBox>
            <TableView fx:id="itemsTable">
                <columns>
                    <TableColumn prefWidth="281.59998166561127" text="Item" />
                    <TableColumn prefWidth="104.800048828125" text="Price" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
                <Text text="Total  ">
               <font>
                  <Font size="16.0" />
               </font></Text>
                <Text fx:id="totalPrice" text="10.50" textAlignment="RIGHT">
               <HBox.margin>
                  <Insets bottom="2.0" right="20.0" />
               </HBox.margin>
               <font>
                  <Font size="16.0" />
               </font></Text>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button onAction="#back" text="Back" HBox.hgrow="NEVER" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#confirm" text="Confirm All" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>
</BorderPane>
