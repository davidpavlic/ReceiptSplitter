<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.MainWindowController">
    <top>
        <MenuBar prefHeight="10.0" prefWidth="214.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Help">
                    <items>
                        <MenuItem fx:id="menuShowHelp" accelerator="F1" text="Show help" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button text="Back" HBox.hgrow="NEVER" />

            <!-- Spacer that pushes both buttons to the ends -->
            <Pane HBox.hgrow="ALWAYS" />

            <!-- Button on the right -->
            <Button text="Confirm" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="167.0" prefWidth="386.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="ReceiptSplitter" textAlignment="CENTER" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
            </Label>
              <GridPane alignment="CENTER" hgap="10" vgap="10">
                  <padding>
                      <Insets bottom="10.0" left="50.0" right="50.0" />
                  </padding>
                  <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" percentWidth="50" />
                      <ColumnConstraints hgrow="SOMETIMES" percentWidth="50" />
                  </columnConstraints>
      
                  <Button fx:id="addReceiptButton" maxWidth="Infinity" style="-fx-font-size: 14px;" text="Contact List" GridPane.rowIndex="3" />
                  <Button fx:id="contactListButton" maxWidth="Infinity" style="-fx-font-size: 14px;" text="Profile" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Button fx:id="transactionsButton" maxWidth="Infinity" prefHeight="27.0" prefWidth="329.0" style="-fx-font-size: 14px;" text="Add Receipt" GridPane.columnSpan="2" GridPane.rowIndex="2" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
              </GridPane>
         </children>
      </VBox>
   </center>
</BorderPane>
