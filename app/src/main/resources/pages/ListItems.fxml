<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.ListItemsController">
    <top>
        <MenuBar prefHeight="10.0" prefWidth="214.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Help">
                    <items>
                        <MenuItem fx:id="showHelp" accelerator="F1" text="Show help" />
                        <MenuItem mnemonicParsing="false" text="FAQ" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button onAction="#back" text="Back" HBox.hgrow="NEVER" />

            <!-- Spacer that pushes both buttons to the ends -->
            <Pane HBox.hgrow="ALWAYS" />

            <!-- Button on the right -->
            <Button onAction="#reset" prefHeight="26.0" prefWidth="61.0" text="Reset" HBox.hgrow="NEVER" />
            <Button onAction="#confirm" text="Confirm" />
        </HBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" prefHeight="167.0" prefWidth="386.0" BorderPane.alignment="CENTER">
         <Label text="Edit Items">
            <font>
               <Font name="System Bold Italic" size="26.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
         <HBox alignment="CENTER_RIGHT" prefHeight="66.0" prefWidth="386.0">
            <children>
               <Button mnemonicParsing="false" onAction="#addReceiptItem" text="+">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
                  <HBox.margin>
                     <Insets bottom="10.0" />
                  </HBox.margin>
               </Button>
            </children>
            <VBox.margin>
               <Insets right="10.0" />
            </VBox.margin>
         </HBox>
            <TableView fx:id="tableReceiptItems" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="amountColumn" prefWidth="68.00005948543549" text="Amount" />
                    <TableColumn fx:id="nameColumn" prefWidth="139.19995880126953" text="Name" />
                    <TableColumn fx:id="unitPriceColumn" minWidth="-Infinity" prefWidth="81.60003662109375" text="Price" />
                    <TableColumn fx:id="totalPriceColumn" minWidth="-Infinity" prefWidth="68.800048828125" text="Total" />
               <TableColumn fx:id="actionColumn" minWidth="-Infinity" prefWidth="44.0" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
