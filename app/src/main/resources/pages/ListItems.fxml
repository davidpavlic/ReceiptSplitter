<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.ListItemsController">
    <top>
        <MenuBar prefHeight="10.0" prefWidth="214.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Help">
                    <items>
                        <MenuItem fx:id="showHelp" accelerator="F1" text="Show help" />
                        <MenuItem mnemonicParsing="false" text="FAQ" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button onAction="#back" text="Back" HBox.hgrow="NEVER" />

            <!-- Spacer that pushes both buttons to the ends -->
            <Pane HBox.hgrow="ALWAYS" />

            <!-- Button on the right -->
            <Button onAction="#goToEditItemsController" prefHeight="26.0" prefWidth="61.0" text="Edit" HBox.hgrow="NEVER" />
            <Button onAction="#confirm" text="Confirm" />
        </HBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" prefHeight="167.0" prefWidth="386.0" BorderPane.alignment="CENTER">
            <HBox fx:id="errorMessageBox" alignment="CENTER" prefHeight="31.0" prefWidth="386.0" styleClass="errormessage-box" visible="false" managed="false">
                <Pane HBox.hgrow="ALWAYS" /> <!-- Spacer to help center the label horizontally -->
                <Label fx:id="errorMessageLabel" styleClass="errormessage-label"/>
                <Pane HBox.hgrow="ALWAYS" /> <!-- Another spacer to keep the label centered horizontally -->
                <Button fx:id="closeErrorMessageButton" onAction="#closeErrorMessage"
                        styleClass="errormessage-close-button"
                        text="x" HBox.hgrow="NEVER" />
            </HBox>
            <TableView fx:id="tableReceiptItems" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="amountColumn" prefWidth="68.00005948543549" text="Amount" />
                    <TableColumn fx:id="nameColumn" prefWidth="168.79999542236328" text="Name" />
                    <TableColumn fx:id="unitPriceColumn" minWidth="-Infinity" prefWidth="72.79998779296875" text="Price" />
                    <TableColumn fx:id="totalPriceColumn" minWidth="-Infinity" prefWidth="76.79998779296875" text="Total" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
