<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" stylesheets="@../styles/style.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.EditContactController">
    <top>
        <MenuBar prefHeight="10.0" prefWidth="386.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Help">
                    <items>
                        <MenuItem onAction="#showHelp" text="Show help"/>
                        <MenuItem mnemonicParsing="false" onAction="#showFAQ" text="FAQ"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button onAction="#back" prefHeight="26.0" prefWidth="58.0" text="Back" HBox.hgrow="NEVER"/>

            <!-- Spacer that pushes both buttons to the ends -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Button on the right -->
            <Button onAction="#reset" prefHeight="26.0" prefWidth="60.0" text="Reset" HBox.hgrow="NEVER"/>
            <Button fx:id="confirmButton" onAction="#confirm" text="Confirm"/>
        </HBox>
    </bottom>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="167.0" prefWidth="386.0" BorderPane.alignment="CENTER">
            <children>
                <HBox fx:id="errorMessageBox" alignment="CENTER" managed="false" prefHeight="31.0" prefWidth="386.0"
                      styleClass="errormessage-box" visible="false">
                    <Pane HBox.hgrow="ALWAYS"/> <!-- Spacer to help center the label horizontally -->
                    <Label fx:id="errorMessageLabel" styleClass="errormessage-label"/>
                    <Pane HBox.hgrow="ALWAYS"/> <!-- Another spacer to keep the label centered horizontally -->
                    <Button onAction="#closeErrorMessage" styleClass="errormessage-close-button" text="x"
                            HBox.hgrow="NEVER"/>
                </HBox>
                <Label alignment="CENTER" text="Edit Contact" textAlignment="CENTER" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="System Bold Italic" size="26.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Label>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="176.0"
                               text="First Name:"/>
                        <TextField fx:id="firstNameInput" promptText="First Name" GridPane.columnIndex="1"
                                   GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER"
                                   GridPane.vgrow="ALWAYS">
                            <GridPane.margin>
                                <Insets left="5.0" right="25.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="176.0"
                               text="Last Name:" GridPane.rowIndex="1"/>
                        <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="176.0"
                               text="Email:" GridPane.rowIndex="2"/>
                        <TextField fx:id="lastNameInput" promptText="Last Name" GridPane.columnIndex="1"
                                   GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                                   GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                            <GridPane.margin>
                                <Insets left="5.0" right="25.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="emailInput" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets left="5.0" right="25.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Label fx:id="emailErrorLabel" nodeOrientation="LEFT_TO_RIGHT" styleClass="error-style"
                               text="Invalid email format" textFill="RED" visible="false" GridPane.columnIndex="1"
                               GridPane.rowIndex="3">
                            <GridPane.margin>
                                <Insets left="5.0"/>
                            </GridPane.margin>
                        </Label>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>
</BorderPane>
