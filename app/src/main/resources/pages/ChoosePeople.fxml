<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.ChoosePeopleController">
    <top>
        <MenuBar prefHeight="10.0" prefWidth="214.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Help">
                    <MenuItem accelerator="F1" onAction="#showHelp" text="Show help" />
                    <MenuItem mnemonicParsing="false" text="FAQ" />
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox fx:id="contactListContainer" spacing="10" style="-fx-padding: 10;">
         <Label alignment="CENTER" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" text="Please choose the People you want to Include" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
            <Button fx:id="addNameBtn" minWidth="30" onAction="#handleAddNameBtnAction" text="+">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin></Button>
            <HBox spacing="10" />
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button onAction="#back" text="Back" HBox.hgrow="NEVER" />

            <!-- Spacer that pushes both buttons to the ends -->
            <Pane HBox.hgrow="ALWAYS">
            <children>
               <Button mnemonicParsing="false" onAction="#reset" text="Reset" />
               <Button layoutX="89.0" mnemonicParsing="false" onAction="#openContactList" text="Contact List" />
            </children></Pane>

            <!-- Button on the right -->
            <Button fx:id="confirmButton" text="Confirm" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>

</BorderPane>
