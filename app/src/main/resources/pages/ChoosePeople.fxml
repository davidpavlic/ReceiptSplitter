<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.ChoosePeopleController">
    <top>
        <MenuBar prefHeight="10.0" prefWidth="214.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Help">
                    <MenuItem fx:id="showHelp" accelerator="F1" text="Show help" />
                    <MenuItem mnemonicParsing="false" text="FAQ" />
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <Label minWidth="100" prefHeight="18.0" prefWidth="154.0" text="Name" />
                <Label minWidth="150.0" prefHeight="18.0" prefWidth="158.0" text="Email" />
            </HBox>
            <HBox spacing="10">
                <ComboBox fx:id="nameDropdown" minWidth="100" prefHeight="26.0" prefWidth="170.0" />
                <Label fx:id="emailLabel" minWidth="163.0" prefHeight="18.0" prefWidth="163.0" />
            </HBox>
            <Button fx:id="addNameBtn" minWidth="30" text="+" onAction="#handleAddNameBtnAction">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin></Button>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button onAction="#back" text="Back" HBox.hgrow="NEVER" />

            <!-- Spacer that pushes both buttons to the ends -->
            <Pane HBox.hgrow="ALWAYS">
            <children>
               <Button mnemonicParsing="false" onAction="#reset" text="Reset" />
               <Button layoutX="83.0" mnemonicParsing="false" onAction="#openContactList" text="Contact List" />
            </children></Pane>

            <!-- Button on the right -->
            <Button onAction="#confirm" text="Confirm" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>

</BorderPane>
