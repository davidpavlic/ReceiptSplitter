<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="60.0" minWidth="280.0" prefHeight="262.0" prefWidth="386.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm2.receiptsplitter.controller.ContactListController">
    <top>
        <MenuBar prefHeight="10.0" prefWidth="386.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Help">
                    <items>
                        <MenuItem onAction="#showHelpModal" text="Show help" />
                        <MenuItem mnemonicParsing="false" onAction="#showFAQ" text="FAQ" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Button on the left -->
            <Button onAction="#back" cancelButton="true" text="Back" HBox.hgrow="NEVER" />

            <!-- Spacer that pushes both buttons to the ends -->
            <Pane HBox.hgrow="ALWAYS" />

            <!-- Button on the right -->
            <Button onAction="#confirm" text="Confirm" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" prefHeight="167.0" prefWidth="386.0" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" text="Contacts" textAlignment="CENTER" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="System Bold Italic" size="26.0" />
                    </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
                </Label>
                <TableView fx:id="tableContactList">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="142.0" text="Name" />
                        <TableColumn fx:id="emailColumn" prefWidth="141.0" text="Email" />
                  <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action" />
                    </columns>
                </TableView>
            <Button onAction="#openCreateProfile" mnemonicParsing="false" text="Add Contact" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
